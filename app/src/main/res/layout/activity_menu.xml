<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/btActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tampil_activity"


        />

    <Button
        android:id="@+id/btFragmentMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/tampil_fragment_movie"
        app:layout_constraintTop_toBottomOf="@+id/btActivity"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btUtama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/tampil_fragment_movie"
        app:layout_constraintTop_toBottomOf="@+id/btFragmentMovie"
        tools:layout_editor_absoluteX="16dp" />


</android.support.constraint.ConstraintLayout>